{
	"manifest_version": 2,
	"permissions": ["<all_urls>"],
	"web_accessible_resources": [
		"thirdparty/bergamot/bergamot-translator-worker.wasm",
		"thirdparty/bergamot/bergamot-translator-worker.js",
		"thirdparty/bergamot/translator.worker.js",
		"offscreen-documents/translator/translator.html",
		"offscreen-documents/translator/translator.js",
		"contentscript.css"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval';",
	"browser_action": {
		"theme_icons": [
			{
				"light": "static/logo/logo-icon-simple-light.png",
				"dark": "static/logo/logo-icon-simple-dark.png",
				"size": 128
			}
		],
		"default_popup": "pages/popup/popup.html",
		"default_title": "__MSG_ext_name__",
		"default_icon": "static/logo/logo-icon-simple-dark.png"
	},
	"background": {
		"scripts": ["background.worker.js"]
	}
}
